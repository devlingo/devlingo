{
	"extends": "../tsconfig.json",
	"include": ["*.d.ts", "**/*.ts", "**/*.tsx"],
	"exclude": ["node_modules"],
	"compilerOptions": {
		"baseUrl": ".",
		"isolatedModules": true,
		"jsx": "preserve",
		"lib": ["dom", "dom.iterable", "ESNext"],
		"types": ["vitest/globals", "@testing-library/jest-dom"],
		"paths": {
			"@/*": ["src/*"],
			"tests/*": ["tests/*"]
		}
	}
}
